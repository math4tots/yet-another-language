{
    "name": "yal",
    "displayName": "yal",
    "description": "Intellisense support for Yet Another Language",
    "version": "0.0.10",
    "publisher": "mtots",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/math4tots/yet-another-language"
    },
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./"
    },
    "contributes": {
        "configurationDefaults": {
            "[yal]": {
                "editor.tabSize": 2
            }
        },
        "configuration": {
            "title": "yal",
            "properties": {
                "yal.yalpath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to search for yal scripts. List of paths separated by ':'"
                }
            }
        },
        "languages": [
            {
                "id": "yal",
                "aliases": [
                    "yet-another-language"
                ],
                "extensions": [
                    ".yal"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yal",
                "scopeName": "source.yal",
                "path": "./syntaxes/yal.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "yal.tokenize",
                "title": "yal: Tokenize yal Code"
            },
            {
                "command": "yal.parse",
                "title": "yal: Parse yal Code"
            },
            {
                "command": "yal.run",
                "title": "yal: Run/Eval yal File"
            },
            {
                "command": "yal.translate",
                "title": "yal: Translate YAL code to JavaScript/HTML"
            },
            {
                "command": "yal.index",
                "title": "yal: Index/re-index all YAL sources"
            }
        ],
        "keybindings": [
            {
                "command": "yal.run",
                "key": "f5",
                "when": "editorLangId == yal"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "yal.tokenize",
                    "when": "editorLangId == yal"
                },
                {
                    "command": "yal.parse",
                    "when": "editorLangId == yal"
                },
                {
                    "command": "yal.run",
                    "when": "editorLangId == yal"
                },
                {
                    "command": "yal.translate",
                    "when": "editorLangId == yal"
                }
            ]
        }
    },
    "activationEvents": [
        "onLanguage:yal",
        "onCommand:yal.tokenize",
        "onCommand:yal.parse",
        "onCommand:yal.run"
    ],
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "ts-loader": "^9.4.2"
    }
}